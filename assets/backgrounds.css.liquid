/*
 *
 * Page Background Settings
 *
 */

/* TODO this splash image thing isn't really background */

#splash
{
	/* Background image: cover whole window as needed */
	position: fixed;
	left: 0;
	top: 0;
	margin: 0;
	height: 100%;
	width: 100%;
	background: url('{{settings.background_image | asset_url }}');
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
	/* For the vertical text centering inside */
	display: table;

}

/* Used method from https://css-tricks.com/vertically-center-multi-lined-text/
 * (Tried the line-height method first but that didn't work for some reason.)
 */

/* TODO template these style things */
#splash > div
{
	font-family: futura-medium;
	text-transform: lowercase;
	color: white;
	text-align: center;
	/* For vertical text centering */
	display: table-cell;
	vertical-align: bottom;
    /* For offset from center position */
    padding-top: 1em;
    font-size: 50%;
}

#splash .title
{
	font-size: 400%;
	padding-left: 1.2em;
	letter-spacing: 1.2em;
}

#splash .address
{
	padding-top: 3em;
	padding-left: 0.5em;
	letter-spacing: 0.5em;
	font-size: 120%;
}

#splash .address > div
{
	padding-bottom: 1em;
}
