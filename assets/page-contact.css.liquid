/* 
 * Contact page main content
 */

#contact
{
/*	margin-left: auto;
	margin-right: auto;*/
	width: 600px;
}

#contact p
{
	letter-spacing: 0.5em;
	font-size: 80%;
}

#contact label
{
	letter-spacing: 0.5em;
	display: block;
	text-transform: uppercase;
	margin: 10px 0;
	font-size: 90%;
}

#contact form .inputs
{
	margin: 20px 0;
}

#contact input[type=text],
#contact input[type=email]
{
	border: none;
	outline: none;
}

#contact input[type=text]:focus,
#contact input[type=email]:focus
{
	border: none;
  	outline: none;
	border-bottom: 1px solid black;
}

#contact input[type=text],
#contact input[type=email]
{
	width: 15em;
}

/*
 * Specifics for the contact form
 */

#contact #inquiry
{
	border-top: 1px dashed black;
	border-bottom: 1px dashed black;
	margin: 20px 0;
	padding: 20px 0;
}

#contact #contactFormMessage
{
	width: 40em;
}

/* Container for success/failure message after submission */
#contact .feedback
{
	padding:0.5em 0.7em;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	margin-bottom:10px;
}

#contact .feedback p {padding:0.5em 0 !important;margin:0 !important}

/* Submission successful! */
#contact .successForm
{
	background: #EFEFEF;
}

/* Submission failed! */
#contact .errorForm
{
	background: #EFEFEF;
}