/* 
 * Contact page main content
 */

#contact
{
	margin-left: auto;
	margin-right: auto;
	width: 600px;
	font-size: 80%;
}

#contact section
{
  margin: 65px 0;
  text-align: center;
}

#contact p
{
  text-align: center;
}

#contact label
{
	display: block;
  text-transform: lowercase;
	margin: 5px 0;
}

#contact input[type=email],
#contact input[type=email]:focus
{
	border: none;
	outline: none;
	width: 15em;
  border-bottom: 1px solid black;
}

#contact form button
{
  margin-left: auto;
  margin-right: auto;
}

/*
 * Specifics for the contact form
 */

#contact #inquiry
{
	border-top: 1px dashed black;
	border-bottom: 1px dashed black;
	margin: 20px 0;
	padding: 20px 0;
}

#contact #contactFormMessage
{
	width: 40em;
}

/* Container for success/failure message after submission */
#contact .feedback
{
	padding:0.5em 0.7em;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	margin-bottom:10px;
}

#contact .feedback p {padding:0.5em 0 !important;margin:0 !important}

/* Submission successful! */
#contact .successForm
{
	background: #EFEFEF;
}

/* Submission failed! */
#contact .errorForm
{
	background: #EFEFEF;
}
