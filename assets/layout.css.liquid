/*
 *
 * Main Layout
 *
 */

html, body
{
	height: 100%;
}

body
{
	margin: 0;
}


#wrap
{
	min-height: 100%;
}

/* Header */

header
{
	padding-bottom: 30px;
}

#home-link
{
	display: block;
	padding-top: 20px;
	width: 280px; /* width of the contained image */
	margin-left: auto;
	margin-right: auto;
	letter-spacing: 1.2em;
	font-family: 'futura-medium';
}

/* The cart items in the upper-right corner */
#cart-summary
{
	float: right;
	margin-right: 10px;
	margin-top: 2px;
}


/* Category navigation */

/* I don't think I actually use a nav tag anywhere... */
nav
{
  float: left;
}

ul#categories
{
    float: left;
	padding: 0;
	margin: 0;
	padding-left: 10px;
	width: 180px;
}

ul#categories > li > a:hover
{
