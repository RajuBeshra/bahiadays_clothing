/*
 *
 * Main Layout
 *
 */

html, body
{
	height: 100%;
}

body
{
  margin: 0;
  min-width: 1280px;
}


/* Header */

header
{
	padding-bottom: 30px;
}

#home-link
{
  text-align: center;
  font-size: 200%;

  display: block;
  padding-top: 20px;
  width: 280px; /* width of the contained image */
  margin-left: auto;
  margin-right: auto;
  letter-spacing: 0.5em;
}

/* The cart items in the upper-right corner */
#cart-summary
{
	float: right;
	margin-right: 10px;
	margin-top: 2px;
}


/* Category Navigation and Information Links */

nav
{
	position: fixed;
}

nav > ul
{
  float: left;
  padding: 0;
  margin: 0;
  padding-left: 10px;
  width: 100%;
  padding-bottom: 30px;
  font-size: 90%;
}

nav > ul > li > a:hover
{
	font-weight: bold;
}

nav > ul > li
{
	margin-bottom: 10px;
}

nav > ul li
{
	list-style-type: none;
}

nav > ul ul
{
	display: none;
	padding-left: 10px;
	font-size: 80%;
}

