/* Stuff */

main
{
	/* Minimum of effective width of nav above */
	margin-left: 190px;
	margin-right: 190px;
    /* Needs at least enough padding at the bottom to account for the footer,
     * since that won't take up space in a normal way. Should be the same as
     * the margin-top of the footer's ul.  */
	padding-bottom: 5em;
}

/* Footer links */

/* http://www.cssstickyfooter.com/ */
footer > ul
{
    /* top margin is the negative of the total height of the box; this pins the
     * element at the bottom of the parent element. padding-top plus height should
     * equal margin-top (negative).  */
	padding: 0;
	margin: 0;
	margin-top: -5em;
	padding-top: 2em;
	height: 3em;
    /* Clear the floating navbar, if the footer ever actually reaches it */
	clear: both;
}

footer > ul li
{
	display: inline;
	list-style-type: none;
	margin-left: 15px;
}

footer > ul ul
{
	display: none;
	position: relative;
	margin-top: -2em;
	bottom: 1em;
}
