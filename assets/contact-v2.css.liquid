/* 
 * Contact page main content
 */

#contact2
{
/*	margin-left: auto;
	margin-right: auto;*/
	width: 600px;
}

#contact2 p
{
	letter-spacing: 0.5em;
	font-size: 80%;
}

#contact2 label
{
	letter-spacing: 0.5em;
	display: block;
	text-transform: uppercase;
	margin: 10px 0;
	font-size: 90%;
}

#contact2 form .inputs
{
	margin: 20px 0;
}

#contact2 input[type=text],
#contact2 input[type=email]
{
	border: none;
	outline: none;
}

#contact2 input[type=text]:focus,
#contact2 input[type=email]:focus
{
	border: none;
  	outline: none;
	border-bottom: 1px solid black;
}

#contact2 input[type=text],
#contact2 input[type=email]
{
	width: 15em;
}

#contact2 button
{
	display: block;
	margin: 5px 0 5px 0;
    background: none;
	text-transform: lowercase;
  	letter-spacing: 0.5em;
    padding: 0;
}

#contact2 button:hover
{
	font-style: italic;
}

/*
 * Specifics for the contact form
 */

#contact2 #inquiry
{
	border-top: 1px dashed black;
	border-bottom: 1px dashed black;
	margin: 20px 0;
	padding: 20px 0;
}

#contact2 #contactFormMessage
{
	width: 40em;
}