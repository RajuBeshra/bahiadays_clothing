/* Products page */

#products
{
	width: 1040px;
	margin-left: auto;
	margin-right: auto;
	overflow: auto;
}

.product
{
	padding: 10px 60px;
	width: 400px;
	height: 690px;
	float: left;
}

/* Displayed below all products if more are available */
#pagination
{
  float: left;
  width: 100%;
  margin-top: 5em;
  margin-bottom: 5em;
  font-size: 130%;
  text-align: center;
  text-transform: lowercase;
}

.product > a
{
	display: block;
	text-align: center;
}
/* http://www.vanseodesign.com/css/vertical-centering/ */
.product > a > div.product-image
{
	/* Max height of this image size */
	line-height: 600px;
}

.product > a > div.product-image img
{
	vertical-align: middle;
	max-width: {{settings.product_thumbnail_width}}px;
	height: auto;
}

.product-info
{
	padding: 10px;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
}

.product-info h2
{
	margin: 6px 0;
	font-size: 80%;
	font-weight: bold;
}

.product-info p
{
	margin: 3px 0;
	font-size: 80%;
}

/* Used to reference the "compare at" prices */
.product-info del
{
	display: block;
	color: gray;
}

#images-nav
{
	width: 600px;
}

#sale-banner
{
  display: none;
  padding: 5px;
  background-color: #f4eaea;
  text-align: center;
  color: #000;
  font-size: 90%;
  text-transform: lowercase;
  letter-spacing: 0.5em;
}
