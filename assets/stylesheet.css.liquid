/*
 *
 * Style for whole site
 *
 */


/* Basic styling */

h1
{
  font-weight: normal;
  text-align: center;
  text-transform: lowercase;
}

a
{
  color: black;
  text-decoration: none;
}

body
{
  font-family: {{settings.font_primary}};
  font-size: {{settings.font_primary_size}};
}

body main p
{
  margin-left: auto;
  margin-right: auto;
  max-width: 80em;
  min-width: 20em;
}

#cart-summary
{
  font-size: 80%;
  letter-spacing: 0.5em;
  text-transform: lowercase;
}

nav > ul
{
  text-transform: lowercase;
  font-family: {{settings.font_nav}};
}

button
{
  font-family: {{settings.font_button}};
  text-align: center;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  display: block;
  margin: 5px 0 5px 0;
  background: none;
  text-transform: lowercase;
  letter-spacing: 0.5em;
  padding: 0;
}

button:hover,
button:focus
{
  font-style: italic;
  outline: none;
}


/* Errors */

div#error
{
  margin-bottom: 5px;
  border-top: 1px solid #6C1010;
  border-bottom: 1px solid #6C1010;
  background: #CF3636;
}

div#error ul
{
  margin: 0;
  padding: 5px 20px;
  font-size: 100%;
  color: white;
  line-height: 25px;
}

div#error li
{
  margin: 0;
  padding: 0 20px;
  font-weight: bold;
  list-style-type: none;
}

/* For away messages, etc. */

#shop-notice
{
  width: 460px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10px;
  margin-bottom: 10px;
  text-align: justify;
  clear: both;
  font-weight: bold;
  font-size: 110%;
}

body#about-page main p,
body#shipping-page main p,
body#policies-page main p
{
  text-align: justify;
}
