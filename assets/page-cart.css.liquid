/* Cart */

#cart-form
{
	font-size: 90%;
}

#cart-form table
{
	border-collapse: collapse;
	margin-left: auto;
	margin-right: auto;
}

#cart-form table .item-text
{
	width: 400px;
}

#cart-form table th
{
	font-weight: normal;
}

#cart-form thead tr
{
	border-bottom: 1px solid #999;
}

#cart-form tbody tr:last-child>*
{
	border-bottom: 1px solid #999;
}

#cart-form tbody tr:last-child td:last-child
{
	border: none;
}

#cart-form td, #cart-form th
{
	padding: 10px 15px;
	vertical-align: middle;
}

#cart-form tbody th, #cart-form tfoot th
{
	text-align: left;
}

#cart-form tbody input
{
	width: 2em;
}

#cart-form thead th:last-child
{
	display: none;
}

#cart-form tbody td:last-child a
{
	color: #aaa;
}

#cart-form tr#update-cart, #cart-form tr#checkout
{
	text-align: right;
}

.alert-noitems
{
  text-align: center;
}